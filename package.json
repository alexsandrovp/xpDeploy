{
	"name": "xp",
	"displayName": "xp",
	"description": "copy files",
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "xp.deploy",
				"title": "xpDeploy"
			},
			{
				"command": "xp.deployWithChoice",
				"title": "xpDeploy ..."
			}
		],
		"configuration": [
			{
				"title": "xp",
				"properties": {
					"xp": {
						"type": "object",
						"properties": {
							"defaultDeployment": {
								"description": "Id of the default deployment",
								"type": "string"
							},
							"deployments": {
								"type": "array",
								"items": {
									"description": "An object containing an id and a map from source to target",
									"type": "object",
									"properties": {
										"name": {
											"description": "Deployment id",
											"type": "string"
										},
										"source": {
											"description": "Selected source id",
											"type": "string"
										},
										"target": {
											"description": "A path in local machine",
											"type": "string"
										}
									}
								}
							},
							"sources": {
								"type": "array",
								"items": {
									"description": "An object describing the source files to deploy",
									"type": "object",
									"properties": {
										"name": {
											"description": "An identifier for this source",
											"type": "string"
										},
										"mapping": {
											"description": "Any path that matches the regex will have it replaced",
											"type": "object",
											"properties": {
												"regex": {
													"description": "regex to match",
													"type": "string"
												},
												"replace": {
													"description": "regex replacement",
													"type": "string"
												}
											}
										},
										"include": {
											"description": "An array of relative paths in the workspace with glob patterns for files to include in deployment",
											"oneOf": [
												{
													"type": "string"
												},
												{
													"type": "array",
													"items": {
														"type": "string"
													}
												}
											]
										},
										"exclude": {
											"description": "An array of relative paths in the workspace with glob patterns for files to exclude from deployment",
											"oneOf": [
												{
													"type": "string"
												},
												{
													"type": "array",
													"items": {
														"type": "string"
													}
												}
											]
										}
									}
								}
							},
							"createButton": {
								"default": false,
								"oneOf": [
									{
										"type": "boolean"
									},
									{
										"type": "object",
										"properties": {
											"label": {
												"description": "Button label",
												"type": "string"
											},
											"withChoice": {
												"description": "true to activate deployWithChoice, false for defaultDeployment",
												"type": "boolean",
												"default": false
											}
										}
									}
								]
							},
							"watch": {
								"type": "string",
								"default": null
							}
						}
					}
				}
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.59.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
